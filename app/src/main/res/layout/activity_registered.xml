<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:background="#fff"
            android:paddingLeft="15dp"
            android:layout_height="36dp"
            android:hint="昵称"/>


         <EditText
             android:id="@+id/et_phone"
            android:layout_width="match_parent"
             android:background="#fff"
             android:paddingLeft="15dp"
             android:layout_marginTop="10dp"
             android:layout_height="36dp"
             android:hint="手机号"/>



        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#fff"
            android:inputType="numberPassword"
            android:layout_marginTop="10dp"
            android:hint="密码"
            android:paddingLeft="15dp"/>



        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#fff"
            android:inputType="numberPassword"
            android:layout_marginTop="10dp"
            android:hint="再次输入密码"
            android:paddingLeft="15dp"/>




        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:hint="邮箱"
            android:paddingLeft="15dp"/>









        <RelativeLayout
            android:id="@+id/relativeaaaaaaaaafsgdnbsd"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="验证码" />

            <TextView
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#c8000a"
                android:id="@+id/et_yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>








        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="写着玩的，凑活的看吧，我看挺好的，就这样，爱看不看"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#f00"/>



        <RelativeLayout
            android:id="@+id/btnRegistered"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/biankuang1"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="注册"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>