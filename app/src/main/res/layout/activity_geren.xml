<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.GeRen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">


        <RelativeLayout
            android:id="@+id/geren_fanhui"
            android:layout_width="45dp"
            android:layout_height="match_parent" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fanhui" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textColor="#000"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/geren_xiugai"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="修改"
            android:textColor="#000"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/geren_xiugai1"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="#000"
            android:textSize="14dp"
            android:visibility="gone" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:text="头像:"
            android:textColor="#000"
            android:textSize="14dp" />


        <RelativeLayout
            android:id="@+id/geren_touxiang"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/geren_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/jinru"
            android:layout_marginRight="10dp"
            app:civ_border_color="#6cf"
            app:civ_border_width="2dp" />


        <ImageView
            android:id="@+id/jinru"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/jinru"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#cacaca" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:text="账号:"
            android:textColor="#000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:lines="1"
            android:textColor="#000"
            android:textSize="14dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#cacaca" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:text="手机号:"
            android:textColor="#000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:lines="1"
            android:textColor="#000"
            android:textSize="14dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#cacaca" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:text="简介:"
            android:textColor="#000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_desc"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:lines="1"
            android:textColor="#000"
            android:textSize="14dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#cacaca" />


    </RelativeLayout>


</LinearLayout>